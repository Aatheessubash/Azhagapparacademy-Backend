# Database Configuration
MONGODB_URI=mongodb://localhost:27017/video-learning-platform
# MONGO_URI=mongodb://localhost:27017/video-learning-platform
MONGO_SERVER_SELECTION_TIMEOUT_MS=10000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# Server Configuration
PORT=5000
NODE_ENV=development

# Admin Configuration
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin123

# Email Notification Configuration
# MAIL_PROVIDER:
# - Leave empty or use "smtp" for SMTP mail (Gmail/custom SMTP)
# - Use "resend" to send via Resend API
MAIL_PROVIDER=smtp

# SMTP / Gmail
MAIL_USER=your-email@gmail.com
MAIL_APP_PASSWORD=your-16-char-app-password
MAIL_FROM=your-email@gmail.com
MAIL_HOST=smtp.gmail.com
MAIL_PORT=465
MAIL_SECURE=true
# MAIL_SERVICE=gmail

# Resend (optional alternative to SMTP; useful when hosting blocks SMTP ports)
# RESEND_API_KEY=re_xxxxxxxxxxxxxxxxx

# Public base URL (optional). Used for building full links in emails.
PUBLIC_BASE_URL=http://localhost:5000

# Cloudinary (optional, recommended for hosted deployments to avoid local-upload loss)
# If these are configured, uploads are persisted to Cloudinary instead of local disk.
# CLOUDINARY_CLOUD_NAME=your-cloud-name
# CLOUDINARY_API_KEY=your-api-key
# CLOUDINARY_API_SECRET=your-api-secret
# You can also use shorthand names:
# CLOUD_NAME=your-cloud-name
# API_KEY=your-api-key
# API_SECRET=your-api-secret
# CLOUDINARY_UPLOAD_ROOT=video-learning-platform
# Keep this true in production so uploads fail fast if cloud storage is missing.
# REQUIRE_CLOUD_STORAGE=true

# Extra allow-list for external video links (comma-separated).
# Google Drive + Cloudinary are already allowed by default.
# ALLOWED_EXTERNAL_VIDEO_HOSTS=videos.example.com,*.example-cdn.com

# One-time admin setup (recommended for production)
# - Only used by POST /api/auth/setup-admin
# - Required when NODE_ENV=production and no admin exists yet
SETUP_ADMIN_SECRET=change-this-setup-secret
