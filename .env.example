# Database Configuration
MONGODB_URI=mongodb://localhost:27017/video-learning-platform
MONGO_SERVER_SELECTION_TIMEOUT_MS=10000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# Server Configuration
PORT=5000
NODE_ENV=development

# Admin Configuration
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin123

# Email Notification Configuration (Gmail App Password)
MAIL_USER=your-email@gmail.com
MAIL_APP_PASSWORD=your-16-char-app-password
MAIL_FROM=your-email@gmail.com

# Public base URL (optional). Used for building full links in emails.
PUBLIC_BASE_URL=http://localhost:5000

# One-time admin setup (recommended for production)
# - Only used by POST /api/auth/setup-admin
# - Required when NODE_ENV=production and no admin exists yet
SETUP_ADMIN_SECRET=change-this-setup-secret
